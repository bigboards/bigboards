{
    "settings": {
        "number_of_shards" : 1,
        "number_of_replicas" : 0
    },
    "mappings": {
        "profile": {
            "_id" : { "path" : "username" },
            "_source": { "enabled": true },
            "_timestamp" : {"enabled": true, "store": "yes"},
            "dynamic": false,
            "properties": {
                "username": { "type": "string", "index": "not_analyzed"},
                "name": { "type": "string" },
                "email": { "type": "string", "index": "not_analyzed"},
                "bio": { "type": "string" }
            }
        },
        "stack": {
            "_source": { "enabled": true },
            "_timestamp" : {"enabled": true, "store": "yes"},
            "dynamic": false,
            "transform" : {
                "script" : "ctx._id = ctx._source['owner'] + '/' + ctx._source['slug']"
            },
            "properties": {
                "owner": { "type": "string", "index": "not_analyzed"},
                "slug": {"type": "string", "index": "not_analyzed" },
                "name": { "type": "string" },
                "type": { "type": "string", "index": "not_analyzed" },
                "description": { "type": "string" },
                "logo": { "type": "string", "index": "not_analyzed" },
                "uri": { "type" : "string", "index": "not_analyzed" },
                "views": {
                    "type" : "nested",
                    "dynamic" : false,
                    "properties" : {
                        "label": { "type": "string" },
                        "description": { "type": "string" },
                        "url": { "type": "string", "index": "not_analyzed" }
                    }
                },
                "containers": {
                    "type" : "nested",
                    "dynamic" : false,
                    "properties" : {
                        "name": { "type": "string", "index": "not_analyzed"  },
                        "image": { "type": "string", "index": "not_analyzed"  },
                        "command": { "type": "string", "index": "not_analyzed" },
                        "ports": { "type": "string", "index": "not_analyzed" },
                        "config": {
                            "type" : "nested",
                            "dynamic" : false,
                            "properties" : {
                                "host_path": { "type": "string", "index": "not_analyzed" },
                                "container_path": { "type": "string", "index": "not_analyzed" }
                            }
                        }
                    }
                },
                "groups": {
                    "type" : "nested",
                    "dynamic" : false,
                    "properties" : {
                        "name": { "type": "string", "index": "not_analyzed" },
                        "runs_on": { "type": "string", "index": "not_analyzed" },
                        "containers": { "type": "string", "index": "not_analyzed" }
                    }
                }
            }
        },
        "tutorial": {
            "_source": {"enabled": true},
            "_timestamp": { "enabled": true, "store": "yes" },
            "dynamic": false,
            "transform": {
                "script": "ctx._id = ctx._source['owner'] + '/' + ctx._source['slug']"
            },
            "properties": {
                "owner": { "type": "string", "index": "not_analyzed"},
                "slug": {"type": "string", "index": "not_analyzed" },
                "name": { "type": "string" },
                "type": { "type": "string", "index": "not_analyzed" },
                "description": { "type": "string" },
                "logo": { "type": "string", "index": "not_analyzed" },
                "uri": { "type" : "string", "index": "not_analyzed" },
                "format": { "type" : "string", "index": "not_analyzed" },
                "toc": { "type" : "string", "index": "not_analyzed" }
            }
        }
    }
}
