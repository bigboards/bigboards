auto lo
iface lo inet loopback

# internal network interface
auto eth0
iface eth0 inet static
    address {{ bb_node_address.stdout }}
    netmask {{ bb_netmask.stdout }}

# external network interface
auto eth1
iface eth1 inet dhcp
    pre-up ip link add link eth0 eth1 type macvlan
    pre-up ifconfig eth1 hw ether {{ bb_nic_ext_mac.stdout }}
    post-down ip link del eth1