{% for group in stack.groups %}
- hosts: {{ group.runs_on }}
  sudo: yes
  roles:
  {% for role in group.containers %}
    - { role: {{ role }}, mode: 'uninstall' }
  {% endfor %}

{% endfor %}

- hosts: all:!localhost
  sudo: yes
  tasks:
    - file: state="absent" path="/data/{{ tint.owner }}/{{ tint.slug }}"